#!/bin/bash
#
# gdnsd           This shell script takes care of starting and stopping
#                 gdnsd for CentOS/RHEL.
#
# chkconfig: - 13 87
# description: gdnsd - lightweight dns server.
#
# Author: Scott Cameron

# These are the defaults anyways, for an installation
#   to /usr/local from a source tarball
GDNSD=/usr/local/sbin/gdnsd
GDNSD_ROOT=/srv/gdnsd

# Source function library.
. /etc/rc.d/init.d/functions

start() {
        [ -x ${GDNSD} ] || exit 1

        # Check if process is running.
        echo -n $"Starting ${GDNSD}: "
        if [ -n "`/sbin/pidof -o %PPID ${GDNSD}`" ]; then
         echo -n $"${GDNSD}: already running"
         failure
         echo
         exit 1
        fi

        # Start the process.  GDNSD does a checkconf prior to starting.
        daemon ${GDNSD} -d ${GDNSD_ROOT} start >/dev/null 2>&1
        RETVAL=$?
        if [ $RETVAL -eq 0 ]; then
         success
         echo
        fi

        return $RETVAL
}
stop() {
        # Stop process.
        echo -n $"Stopping ${GDNSD}: "

        if [ ! -n "`/sbin/pidof -o %PPID ${GDNSD}`" ]; then
         echo -n $"${GDNSD}: not running"
         failure
         echo
         exit 1
        fi

        ${GDNSD} -d ${GDNSD_ROOT} stop >/dev/null 2>&1
        RETVAL=$?

        if [ $RETVAL -eq 0 ]; then
         success
         echo
        fi

        return $RETVAL
}
restart() {
        # Restart process.
        echo "Restarting ${GDNSD}: "
        ${GDNSD} -d ${GDNSD_ROOT} restart >/dev/null 2>&1
        RETVAL=$?

        if [ $RETVAL -eq 0 ]; then
         success
         echo
        fi

        return $RETVAL
}
reload() {
        restart
}
checkconfig() {
        # Check config

        ${GDNSD} -d ${GDNSD_ROOT} checkconf
        RETVAL=$?

        return $retval
}

# See how we were called.
case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        restart)
                restart
                ;;
        reload)
                reload
                ;;
        checkconfig|configtest|check|test)
                checkconfig
                ;;
        *)
                echo $"Usage: $0 {start|stop|restart|reload|configtest}"
                exit 2
esac

exit $?
